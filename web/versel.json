{
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "routes": [
    {
      "src": "/[^.]+",
      "dest": "/",
      "status": 200
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "errorPages": {
    "404": "/404",
    "500": "/500",
    "403": "/403"
  }
}